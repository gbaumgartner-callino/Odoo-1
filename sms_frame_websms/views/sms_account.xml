<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
      <record id="sms_account_view_form_inherit_sms_frame_websms" model="ir.ui.view">
          <field name="name">sms.account.view.form</field>
          <field name="model">sms.account</field>
          <field name="inherit_id" ref="sms_frame.sms_account_view_form"/>
          <field name="arch" type="xml">
      	      <xpath expr="//h2[@id='gatewayhook']" position="after">
      	          <div attrs="{'invisible': [('gateway_model', '!=', 'sms.gateway.websms')]}">
		      <group>
	                  <field name="websms_auth_username"/>
                          <field name="websms_auth_passwd"/>
                          <field name="websms_last_check_date"/>
                          <button name="websms_quick_setup" type="object" string="Quick Setup" help="Points Websms to your odoo server"/>
                      </group>
    	          </div>
      	      </xpath>
      	  </field>
      </record>
      
  </data>
</openerp>